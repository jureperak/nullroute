server {
    listen 443 ssl;
    server_name ${SNACKING_CONTAINER}.${SERVER_NAME};

    resolver 127.0.0.11 valid=10s ipv6=off;

    ssl_certificate     /etc/nginx/certs/home-arpa.pem;
    ssl_certificate_key /etc/nginx/certs/home-arpa-key.pem;

    location / {
        set $snacking_upstream snacking;
        proxy_pass http://$snacking_upstream:3000;

        proxy_connect_timeout 2s;
        proxy_read_timeout 120s;

        proxy_next_upstream error timeout http_502 http_503 http_504;
        proxy_next_upstream_tries 1;

        # WebSocket support (safe for Node/TanStack)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    error_page 502 503 504 =200 /snacking_unavailable.html;

    location = /snacking_unavailable.html {
        internal;
        default_type text/html;
        return 200 "<h1>Snacking is not available at the moment</h1>";
    }
}

