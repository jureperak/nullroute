server {
    listen 443 ssl default_server;
    server_name _;

    ssl_certificate     /etc/nginx/certs/home-arpa.pem;
    ssl_certificate_key /etc/nginx/certs/home-arpa-key.pem;

    return 301 https://${PIHOLE_CONTAINER}.${SERVER_NAME}$request_uri;
}

server {
    listen 443 ssl;
    server_name ${SCRAPPER_CONTAINER}.${SERVER_NAME};

    resolver 127.0.0.11 valid=10s ipv6=off;

    ssl_certificate     /etc/nginx/certs/home-arpa.pem;
    ssl_certificate_key /etc/nginx/certs/home-arpa-key.pem;

    location / {
        set $scrapper_upstream scrapper;
        proxy_pass http://$scrapper_upstream:8080;

        proxy_connect_timeout 2s;
        proxy_read_timeout 120s;
        proxy_next_upstream error timeout http_502 http_503 http_504;
        proxy_next_upstream_tries 1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    error_page 502 503 504 =200 /scrapper_unavailable.html;

    location = /scrapper_unavailable.html {
        internal;
        default_type text/html;
        return 200 "<h1>Scrapper is not available at the moment</h1>";
    }
}

